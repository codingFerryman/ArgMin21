{
  "name": "albert-base",
  "seed": 2021,
  "model_config": {
    "type": "transformer",
    "name_or_path": "albert-base-v2",
    "args": {
      "output_attentions": true,
      "output_hidden_states": true
    }
  },
  "tokenizer_config": {
    "type": "transformer",
    "name_or_path": "albert-base-v2",
    "args": {
      "max_length": 80,
      "padding": "max_length",
      "truncation": "longest_first",
      "return_tensors": "pt"
    }
  },
  "trainer_config": {
    "num_train_epochs": 10,
    "per_device_train_batch_size": 32,
    "per_device_eval_batch_size": 8,
    "learning_rate": 3e-5,
    "early_stopping_patience": 2,
    "early_stopping_threshold": 0.00001,
    "loss_fct": "torch.nn.BCEWithLogitsLoss",
    "activation_fct": "sigmoid"
  },
  "eval_config": {
    "batch_size": 32,
    "mode": "plain",
    "metrics": "accuracy,f1"
  }
}