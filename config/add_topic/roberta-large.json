{
  "name": "roberta-large+topic",
  "seed": 42,
  "model_name": "roberta-large",
  "data_config": {
    "load_ratio": 1,
    "add_info": "topic"
  },
  "model_config": {
  },
  "tokenizer_config": {
    "max_length": 40,
    "return_tensors": "pt"
  },
  "trainer_config": {
    "num_train_epochs": 10,
    "per_device_train_batch_size": 64,
    "per_device_eval_batch_size": 32,
    "eval_accumulation_steps": 30,
    "learning_rate": 3e-5,
    "early_stopping_patience": 3,
    "early_stopping_threshold": 0.00001,
    "metric_for_best_model": "eval_loss",
    "fp16": true
  },
  "eval_config": {
    "mode": "simple"
  }
}
